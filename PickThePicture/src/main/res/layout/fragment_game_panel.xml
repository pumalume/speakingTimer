<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:padding = "2dp"
        android:orientation="horizontal">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/laneControllerView"
            android:layout_width="0dp"
            android:layout_height = "match_parent"
            android:layout_weight="10"
            android:name="com.ingilizceevi.pickthepicture.ImageController"
            tools:layout="@layout/fragment_image_controller" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".8">

            <FrameLayout
                android:id = "@+id/signalCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/red_circle" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/playButton"
                    android:src = "@drawable/sound"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation = "horizontal">

        <Chronometer
            android:id="@+id/myTimer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/myClicks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight = "10"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="16sp"
            android:text="Clicks=0"/>
        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:src="@drawable/cancel" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>